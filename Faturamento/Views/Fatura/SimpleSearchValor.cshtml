@model IEnumerable<Faturamento.Models.Fatura>

@{
    ViewData["Title"] = "Simple Search Valor";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="searchValor">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total faturas dos dias selecionados = @Model.Sum(obj => obj.valor).ToString("F2")</h3>
        <h3 class="panel-title">Media do mês = @Model.Sum(obj => obj.valor/30).ToString("F2")</h3>



    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Distribuidora.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.valor )
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dia)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Distribuidora.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.valor)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>